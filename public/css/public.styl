body
	font-family Microsoft YaHei
a:link
	text-decoration none
ul
	list-style none
.container
	width 1200px
	margin 0 auto
.float-left
	float left
.float-right
	float right
.clear
	&:after
		content ''
		clear both
		display block
		overflow hidden
		font-size 0
		height 0
// 导航栏部分 start
.navbar
	background-color rgba(#000, .15)
	border-bottom 1px solid #969aa1
	position fixed
	top 0
	width 100%
	-webkit-transition background-color .5s ease-in-out
	transition background-color .5s ease-in-out
	z-index 1000
	.float-left
		a
			display block
			height 42px
			padding 27px 35px
	.float-right
		ul
			margin 0
			padding 0 10px 0 0
			li
				float left
		a
			display block
			font-size 16px
			line-height 20px
			color #fff
			padding 38px 25px
			&:hover, &:focus
				background-color rgba(#6f716f, 0.6)
	img
		max-height 42px
	img.logo-dark
		display none
.nav-collapse
	background-color #fff
	img.logo-light
		display none
	img.logo-dark
		display inline
	.float-right
		a
			color #242424
			&:hover, &:focus
				background-color #eee
// 导航栏部分 end
// 底部部分 start
footer
	height 600px
	background-color #242424
	.footer-link
		text-align center
		font-size 0
		padding 95px 0 32px
		position relative
		overflow hidden
		justify-content space-around
		display flex
		width 590px
		margin 0 auto
		&:after
			content ''
			position absolute
			border-bottom 1px solid #fff
			width 590px
			height 0
			bottom 0
			left calc(50% - 295px)
		a
			display inline
			color #fff
			font-size 14px
			line-height 14px
	.footer-content
		text-align center
		padding 73px 0 0
		font-size 0
		color #fff
		img
			margin-bottom 30px
		p
			font-size 14px
		span
			display block
			font-size 12px
			margin-top 97px
// 底部部分 end
