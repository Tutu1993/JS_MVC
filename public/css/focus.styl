.banner
	height 1400px
	background url('/public/image/focus/background.jpg') center center no-repeat
	color #fff
.title
	padding 200px 130px 25px
	h4, h5, p
		margin 0
	h4
		font-size 36px
	h5
		padding 25px 0 20px
		font-size 24px
	p
		font-size 16px
.content
	padding 0 130px
	>div
		float left
		width 300px
		&:not(:last-child)
			margin-right 20px
		>a.pic
			display block
			height 400px
			background-color #232323
			text-align center
			color #fff
			position relative
			box-shadow 0 0 10px rgba(#000, 0.8)
			&:hover
				&:after
					display block
					-webkit-animation toggle 1s infinite ease-in-out
					animation toggle 1s infinite ease-in-out
			img
				width 300px
				height 300px
			h4, p
				margin 0
				position relative
				z-index 10
			h4
				font-size 24px
				padding-top 26px
			p
				padding 12px 0 16px
				font-size 16px
				text-transform Uppercase
				background-color #232323
			&:before, &:after
				content ''
				position absolute
			&:before
				width 56px
				height 56px
				background-color #232323
				z-index 1
				bottom -28px
				left 122px
				-webkit-transform rotate(45deg)
				transform rotate(45deg)
				box-shadow 0 0 10px rgba(#000, 0.8)
			&:after
				border-left 6px solid #9e9fa0
				border-bottom 6px solid #9e9fa0
				width 30px
				height 30px
				-webkit-transform rotate(-45deg)
				transform rotate(-45deg)
				bottom -50px
				right 132px
				display none
		.txt
			padding-top 280px
			text-align center
			position relative
			top -80px
			h5, p
				margin 0
			h5
				font-size 16px
				position absolute
				width 100%
				top 180px
				line-height 22px
			p
				font-size 12px
				line-height 22px
				text-indent 24px
				text-align justify
@keyframes toggle {
	0% {
		bottom -50px
		opacity .75
	}
	50% {
		bottom -65px
		opacity 1
	}
	100% {
		bottom -50px
		opacity .75
	}
}
