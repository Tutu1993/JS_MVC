.banner
	height 1080px
	background url('/public/image/about/background.jpg') center center no-repeat
	color #fff
	.container
		padding-top 368px
		position relative
		input[type="radio"]
			display none
.six-box
	text-align center
	position absolute
	cursor pointer
	z-index 100
	h4, p
		margin 0
	h4
		-webkit-transition font-size .25s ease-in-out
		transition font-size .25s ease-in-out
		font-weight normal
	p
		font-size 12px
		text-transform Uppercase
.six-box-size-1
	width 163px
	height 189px
	h4
		font-size 18px
		padding 72px 0 10px
	&:hover
		h4
			font-size: 32px
.six-box-size-2
	width 119px
	height 136px
	h4
		font-size 14px
		padding 52px 0 7px
	p
		-webkit-transform scale(.83)
		transform scale(.83)
	&:hover
		h4
			font-size: 24px
.six-layout-1
	background url('/public/image/about/six-1.png') center center no-repeat
	top 478px
	right 174px
.six-layout-2
	background url('/public/image/about/six-2.png') center center no-repeat
	top 511px
	right 47px
.six-layout-3
	background url('/public/image/about/six-3.png') center center no-repeat
	top 368px
	right 139px
.six-layout-4
	background url('/public/image/about/six-4.png') center center no-repeat
	top 386px
	right 12px
.content
	display none
	padding 217px 0 0 35px
	opacity 0
	h4, h5, p
		margin 0
	h4
		font-size 36px
	h5
		font-size 24px
		padding 23px 0 33px
		text-transform Uppercase
	p
		font-size 16px
		line-height 30px
		width 750px
		text-align justify
#six-layout-1:checked ~ #content-1, #six-layout-2:checked ~ #content-2, #six-layout-3:checked ~ #content-3, #six-layout-4:checked ~ #content-4
	display block
	opacity 1
	-webkit-animation opacity .75s ease-in-out 1 forwards
	animation opacity .75s ease-in-out 1 forwards
@keyframes opacity {
	from {
		opacity 0
	}
	to {
		opacity 1
	}
}
