.banner
	height 500px
	background url('/public/image/news/banner.jpg') top center no-repeat
.list
	padding 40px 0 118px
	.float-left
		padding-left 40px
		a
			display block
			text-align center
			width 248px
			height 78px
			border 1px solid #ccc
			font-size 20px
			line-height 80px
			color #232323
			&:not(:first-child)
				margin-top -1px
			&.active
				color #fff
				background-color #b72229
	.float-right
		padding-right 30px
		div.box
			display block
			width 770px
			height 260px
			padding 40px
			box-shadow 0 0 10px rgba(#000, 0.3)
			margin-bottom 30px
			position relative
			a
				font-size 0
				position relative
				h4
					font-size 18px
					color #232323
					margin-top 15px
					position absolute
					display -webkit-box
					-webkit-box-orient vertical
					-webkit-line-clamp 1
					overflow hidden
					width 400px
					left -420px
				img
					float right
					width 320px
					height 220px
					background-color #ccc
			p, span
				font-size 14px
				color #a6a7aa
			p
				margin 0
				text-align justify
				padding 57px 20px 0 0
				line-height 20px
				display -webkit-box
				-webkit-box-orient vertical
				-webkit-line-clamp 4
				overflow hidden
			span
				position absolute
				bottom 40px
.pagination
	padding-top 32px
	text-align center
	a
		display inline-block
		width 26px
		height 26px
		border 2px solid #f3f3f3
		border-radius 1px
		color #a4a4a4
		line-height 26px
		font-size 14px
		&.active
			border 2px solid #4695ef
			background-color #4695ef
			color #fff
		&.display
			background-color #f3f3f3
			color #bfbfbf
