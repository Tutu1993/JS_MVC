.banner
	height 1080px
	background url('/public/image/model/background.jpg') center center no-repeat
	color #fff
	.container
		h4, h5, p
			margin 0
		h4
			padding 210px 0 25px 40px
			font-size 36px
			line-height 36px
		p
			padding-left 40px
			font-size 24px
			line-height 24px
		.clear
			padding 80px 140px 0
			div
				float left
				width 268px
				height 428px
				border 1px solid #fff
				text-align center
				font-size 0
